{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Mocha Tests",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "test"],
      "env": {
        "TS_NODE_COMPILER_OPTIONS": "{\"module\": \"commonjs\" }"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
